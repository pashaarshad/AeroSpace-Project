# Environment Variables for IntelliGraph Bot

# OpenRouter API (for LLM access)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# DeepSafe API (for AI safety validation)
DEEPSAFE_API_KEY=your_deepsafe_api_key_here

# Neo4j Database Configuration
NEO4J_URI=neo4j+s://your-neo4j-instance.databases.neo4j.io
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_neo4j_password_here

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_supabase_anon_key_here

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your_secret_key_here

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost/intelligraph_db

# File Upload Configuration
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216  # 16MB

# API Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=app.log

# External APIs
ARXIV_API_URL=http://export.arxiv.org/api/query
SEMANTIC_SCHOLAR_API_URL=https://api.semanticscholar.org/graph/v1

# Cache Configuration
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600  # 1 hour

# Security Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
JWT_SECRET_KEY=your_jwt_secret_here
JWT_EXPIRATION_DELTA=3600

# Search Configuration
MAX_SEARCH_RESULTS=100
SEARCH_TIMEOUT=30

# Knowledge Graph Configuration
KG_UPDATE_INTERVAL=300  # 5 minutes
KG_BACKUP_INTERVAL=86400  # 24 hours
